<?xml version="1.0" encoding="utf-8"?>
<navigation
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation_graph"
    app:startDestination="@id/searchFragment">

    <!-- Экран поиска -->
    <fragment
        android:id="@+id/searchFragment"
        android:name="com.example.musicalquizz.ui.fragments.SearchFragment"
        android:label="Поиск"
        tools:layout="@layout/fragment_search">

        <!-- Переход к деталям трека -->
        <action
            android:id="@+id/action_search_to_trackDetailsFragment"
            app:destination="@id/trackDetailsFragment" />

        <!-- Переход к деталям альбома -->
        <action
            android:id="@+id/action_search_to_albumDetailsFragment"
            app:destination="@id/albumDetailsFragment" />
    </fragment>

    <!-- Экран деталей трека -->
    <fragment
        android:id="@+id/trackDetailsFragment"
        android:name="com.example.musicalquizz.ui.fragments.TrackDetailsFragment"
        android:label="Детали трека"
        tools:layout="@layout/fragment_track_details">
        <argument
            android:name="trackId"
            app:argType="long" />
    </fragment>

    <!-- Экран деталей альбома -->
    <fragment
        android:id="@+id/albumDetailsFragment"
        android:name="com.example.musicalquizz.ui.fragments.AlbumDetailsFragment"
        android:label="Детали альбома"
        tools:layout="@layout/fragment_album_details">
        <argument
            android:name="albumId"
            app:argType="long" />
        <action
            android:id="@+id/action_albumDetail_to_trackDetail"
            app:destination="@id/trackDetailsFragment" />
    </fragment>

    <fragment
        android:id="@+id/playlistFragment"
        android:name="com.example.musicalquizz.ui.fragments.PlaylistsFragment"
        android:label="Плейлисты"
        tools:layout="@layout/fragment_playlist">
        <action
            android:id="@+id/action_playlists_to_createPlaylist"
            app:destination="@id/createPlaylistFragment" />
        <action
            android:id="@+id/action_playlists_to_playlistDetail"
            app:destination="@id/playlistDetailFragment"
            app:enterAnim="@anim/slide_in_right"
            app:popEnterAnim="@anim/slide_in_left">
            <argument
                android:name="playlistId"
                app:argType="long" />
        </action>
    </fragment>

    <!-- Фрагмент создания плейлиста -->
    <fragment
        android:id="@+id/createPlaylistFragment"
        android:name="com.example.musicalquizz.ui.fragments.CreatePlaylistFragment"
        android:label="Новый плейлист"
        tools:layout="@layout/fragment_create_playlist">
        <action
            android:id="@+id/action_createPlaylist_to_playlists"
            app:destination="@id/playlistFragment"
            app:popUpTo="@id/playlistFragment"
            app:popUpToInclusive="true" />
    </fragment>

    <!-- Детали плейлиста -->
    <fragment
        android:id="@+id/playlistDetailFragment"
        android:name="com.example.musicalquizz.ui.fragments.PlaylistDetailFragment"
        android:label="Детали плейлиста"
        tools:layout="@layout/fragment_playlist_detail">
        <argument
            android:name="playlistId"
            app:argType="long" />
        <action
            android:id="@+id/action_playlistDetail_to_search"
            app:destination="@id/searchFragment">
            <argument
                android:name="playlistId"
                app:argType="long" />
        </action>

        <!-- Вот новый action на TrackDetails -->
        <action
            android:id="@+id/action_playlistDetail_to_trackDetailsFragment"
            app:destination="@id/trackDetailsFragment">
            <argument
                android:name="trackId"
                app:argType="long" />
        </action>
    </fragment>


</navigation>
